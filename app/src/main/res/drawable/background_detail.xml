<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Layer -->
    <item>
        <color android:color="#0E1428" /> <!-- Dark background color -->
    </item>

    <!-- Diagonal Shape Layer -->
    <item>
        <rotate
            android:fromDegrees="315"
            android:pivotX="-50%"
            android:pivotY="12%">
            <shape
                android:shape="rectangle">
                <solid android:color="#D22735" /> <!-- Red diagonal color -->
            </shape>
        </rotate>
    </item>

</layer-list>
